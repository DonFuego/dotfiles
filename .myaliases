# Custom Aliases

alias reload="source ~/.zshrc"
alias dev="cd ~/Dev"
alias d="ls -alh"
alias start_aem="$AEM_HOME/crx-quickstart/bin/quickstart"
alias tomcat="cd $TOMCAT_HOME"
alias starttomcat="$TOMCAT_HOME/bin/startup.sh"
alias stoptomcat="$TOMCAT_HOME/bin/shutdown.sh"
alias tailtomcat="tail -f $TOMCAT_HOME/logs/catalina.out"
alias top=htop
alias setjdk6='export JAVA_HOME=$(/usr/libexec/java_home -v 1.6)'
alias setjdk7='export JAVA_HOME=$(/usr/libexec/java_home -v 1.7)'
alias setjdk8='export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)'
alias setjdk10='export JAVA_HOME=$(/usr/libexec/java_home -v 10)'
alias startSynergy=/Applications/Synergy.app/Contents/MacOS/synergy --server -f --debug DEBUG --name tmatthews --enable-drag-drop --profile-dir /Users/tmatthews/Library/Synergy --log /Users/tmatthews/Library/Synergy/synergy-core.log -c /Users/tmatthews/Library/Synergy/synergy.conf --address :24800
alias startPostgres="pg_ctl -D /usr/local/var/postgres start"
alias stopPostgres="pg_ctl -D /usr/local/var/postgres stop"
alias statusPostgres="pg_ctl -D /usr/local/var/postgres status"

# Git
alias gi="git init && gac 'Initial commit'"
alias gs="git status"
alias glog='git log --graph --all --decorate'
alias gac="git add . && git commit -m" # + commit message
alias gp="git push" # + remote & branch names
alias gpo="git push origin" # + branch name
alias gpom="git push origin master"
alias gl="git pull" # + remote & branch names
alias glo="git pull origin" # + branch name
alias glom="git pull origin master"
alias gb="git branch" # + branch name
alias gc="git checkout" # + branch name
alias gcb="git checkout -b" # + branch name

# Development Project Aliases
alias penguin="cd ~/Dev/projects/Hearst/penguin"
alias joker="cd ~/Dev/projects/Hearst/media-platform/joker"
alias mos2="cd ~/Dev/projects/Hearst/media-platform"
